<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report 
            id="report_serial_number" 
            model="serial.number" 
            string="Serial Number"
            name="serial_number.serial_number_template" 
            file="serial_number.serial_number_template" 
            report_type="qweb-pdf"/>

        <template id="serial_number_template">
            <t t-call="report.html_container">
                <div class="page">
                    <t t-foreach="docs" t-as="doc">
                        <!-- <t t-call="serial_number_external"/> -->
                        <div class="col-xs-4" style="padding:0;">
                            <table style="border-spacing:0;margin-bottom:0;height:122px;" class="table">
                                <thead>
                                    <tr style="width: 8in;">
                                        <td style="border: 2px solid black;width: 2.63in;" colspan="2" class="col-xs-8 danger">
                                            <t t-if="doc.product_id">
                                                [<strong t-field="doc.product_id"/>]
                                            </t>
                                            <strong t-field="doc.product_id"/>
                                            <strong><span t-esc="', '.join(map(lambda x: x.name, doc.product_id))"/></strong>
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr style="width: 8in;">
                                        <td style="border: 2px solid black;text-align: center; vertical-align: middle;" class="col-xs-5">
                                            <img t-if="doc.name" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', doc.name, 600, 150)" style="width:100%;height:20%;"/>
                                            <span t-field="doc.name"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </div>
            </t>
        </template>

        <!-- <template id="serial_number_external">
            <t t-call="report.external_layout">
            </t>
        </template> -->
        
    </data>
</odoo>
