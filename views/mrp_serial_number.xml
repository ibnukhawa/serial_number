<?xml version="1.0"?>
<odoo>
    <data>
	    <record model="ir.ui.view" id="serial_number_form_view">
	        <field name="name">mrp.serial.number.form</field>
	        <field name="model">mrp.serial.number</field>
	        <field name="arch" type="xml">
	        	<form string="Bill of Materials Revision">
	        		<sheet>
	        			<div class="oe_button_box" name="button_box">
		        			<button name="action_view_picking" type="object" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('picking_count', '=', 0)]}">
				                <field name="picking_count" widget="statinfo" string="Internal Transfer"/>
				            </button>
				        </div>
	        			<div class="oe_title oe_inline">
	                        <h1><field name="name" readonly="True" /></h1>
	                    </div>

	        			<group>
	        				<group>
								<field name="sale_id"/>
								<field name="manufacturing_id"/>
	        					<field name="product_id"  />
								<field name="partner_id"/>
	        					<field name="bom_id" invisible="1"/>
	        				</group>
	        				<group>
								<field name="product_selection"/>
	        					<field name="categ_id"/>
                                <field name="date"/>
								<field name="warehouse_id"  required="True" />
	        				</group>
	        			</group>

	        			<notebook>
	        				<page string="Component" name="part_request_line">
		        				<field name="part_request_ids"  mode="tree" >
		        					<form string="Component">
		        						<group>
		        							<group>
		        								<field name="product_id" />
		        								<label for="quantity" />
		        								<div class="o_row">
							                        <field name="quantity"/>
							                        <field name="uom_id" options="{'no_open':True,'no_create':True}" groups="product.group_uom"/>
							                    </div>
		        							</group>
		        							<group>
		        								<field name="description" />
												<!-- <field name="serial_number_ids"/> -->
		        							</group>
		        						</group>
		        					</form>
		        					<tree string="Component" editable="bottom" >
		        						<field name="part_request_id" invisible="True" />
										<field name="product_id" />
		        						<field name="description" />
										<field name="serial_number_pabrik"/>
		        						<field name="quantity" />
		        						<field name="uom_id" />
		        					</tree>
		        				</field>
		        			</page>
	        			</notebook>
	        		</sheet>
	        	</form>
	        </field>
	    </record>

	    <record model="ir.ui.view" id="serial_number_tree_view">
	        <field name="name">mrp.serial.number.tree</field>
	        <field name="model">mrp.serial.number</field>
	        <field name="arch" type="xml">
	        	<tree string="Serial Number">
	        		<field name="name"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="date"/>
                    <field name="sale_id"/>
	        	</tree>
	        </field>
	    </record>

	    <record model="ir.actions.act_window" id="action_serial_number">
	        <field name="name">Serial Number</field>
	        <field name="type">ir.actions.act_window</field>
	        <field name="res_model">mrp.serial.number</field>
	        <field name="view_type">form</field>
	        <field name="view_mode">tree,form</field>
	    </record>
		
	    <menuitem 
            id="main_serialnumber"
            name="Serial Number"
			parent="bt_sales_warranty.sales_warranty_parent_menu"
        />
        <menuitem 
            id="menu_serial_number"
            name="Serial Number"
            parent="main_serialnumber"
            action="serial_number.action_serial_number"

        />
	</data>
</odoo> 